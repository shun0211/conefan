<%= render partial: 'shared/header' %>

<div class="card-information-container">
  <%= render partial: 'shared/sidebar' %>

  <main>
    <div class="card-information-wrapper">
      <h2>支払い方法</h2>

      <div class="credit-card">
        <div class="credit-card-info">
          <%= image_tag asset_path("visa.png", alt: "登録済みクレジットカードのロゴ") %>
          <div class="unit">
            <p class="card-num">1234 5678 9012 3456</p>
            <p class="expiration-date">有効期限 05/23</p>
          </div>
        </div>
        <%= link_to "削除する", card_path(1), method: :delete, class: "credit-card-delete" %>
      </div>
    </div>
  </main>

</div>

<%= render partial: 'shared/sub_footer' %>
<%= render partial: 'shared/footer' %>
