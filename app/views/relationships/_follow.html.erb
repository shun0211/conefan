<% if current_user.following?(user) %>
  <%= link_to 'フォロー中', relationship_path(user.id, follow_id: user.id), method: :delete, class: "btn btn-primary follow-btn", remote: true %>
<% else %>
  <%= link_to 'フォローする', relationships_path(follow_id: user.id), method: :post, class: "btn btn-primary follow-btn", remote: true %>
<% end %>
