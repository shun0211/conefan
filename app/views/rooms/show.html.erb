<%= render "shared/header" %>
<div class="message-container">
  <div class="side-bar">
    <% @users.each do |user| %>
      <div class="user-info">
        <%= image_tag user.avatar.url, alt: "ユーザのプロフィール画像", class: "avatar", size: "40" %>
        <div class="wrapper">
          <div class="user-name">
            <%= user.nickname %>
          </div>
          <div class="last-message">
            すごく助かりました。ありがとうございました〜！！
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <main>
    <div class="message-wrapper">
      <div id="messages" data-room_id="<%= @room.id %>"></div>

        <%= render @messages %>
      </div>
      <%= text_field_tag :content, nil, data: {behavior: 'room_speaker'} %>
    </div>

  </main>
</div>

<%= render "shared/sub_footer" %>
<%= render "shared/footer" %>
