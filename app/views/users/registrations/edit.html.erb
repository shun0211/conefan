<%= render "shared/header" %>

<div class="container profile-container">
  <div class="bg-image">
    <div class="user-info">
      <%= image_tag "/assets/avatar.jpg", alt: "プロフィール画像", size: "50", class: "icon" %>
      <p class="user-name">さかい</p>
      <p class="listing-number">出品数 1枚</p>
    </div>
  </div>
  <div class="wrapper edit-wrapper form-group">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.file_field :avatar %>
      <p id="file-insert">プロフィール画像を変更する</p>
      <%= f.label :nickname, "ニックネーム" %>
      <%= f.text_field :nickname, class: "form-control" %>
      <%= f.label :profile, "プロフィール" %>
      <%= f.text_area :profile, rows: 5, class: "form-control" %>
      <%= button_tag "更新する", type: "submit", class: "btn btn-warning" %>
    <% end %>
  </div>
</div>

<%= render "shared/sub_footer" %>
<%= render "shared/footer" %>
