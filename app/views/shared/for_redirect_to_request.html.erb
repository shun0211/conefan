<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "request", ticket_requests_path(@ticket.id), method: :post, id: "for_redirect", style: "display: none;" %>
  </body>
  <script>
    window.onload = document.getElementById('for_redirect').click();
  </script>
</html>
