<% if user_signed_in? %>
  <% if ticket.liked_by(current_user) %>
    <%= link_to ticket_likes_path(ticket_id: ticket.id, params: { user_id: current_user.id, ticket_id: ticket.id }), method: :delete, remote: true do %>
      <i class="fas fa-heart" id="heart"></i>
      <%= ticket.likes.count %>
      <span>行きたい!!</span>
    <% end %>
  <% else %>
    <%= link_to ticket_likes_path(ticket_id: ticket.id, params: { user_id: current_user.id, ticket_id: ticket.id }), method: :post, remote: true do %>
      <i class="fas fa-heart" id="heart"></i>
      <%= ticket.likes.count %>
      <span>行きたい!!</span>
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-heart" id="heart"></i>
  <%= ticket.likes.count %>
<% end %>
